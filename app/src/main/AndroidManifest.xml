<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.web.app.Tallaba">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tallaba">
        <activity android:name=".Activity.RegisterActivity"
            android:label="@string/Register" >

        </activity>
        <activity android:name=".Activity.LoginActivity"
            android:label="@string/login" >

        </activity>
        <activity
            android:name=".Activity.ReplyActivity"
            android:label="@string/Reply" />
        <activity
            android:name=".Activity.ChangePasswordActivity"
            android:label="@string/change_password" />
        <activity
            android:name=".Activity.ProfileUserActivity"
            android:label="@string/profile" />
        <activity
            android:name=".Activity.FileManagerActivity"
            android:label="@string/file_manager" />
        <activity
            android:name=".Activity.ChatActivity"
            android:label="@string/chat" />
        <activity
            android:name=".Activity.BooksActivity"
            android:label="@string/book" >
        </activity>
        <activity
            android:name=".Activity.BusActivity"
            android:label="@string/bus_timetable" />
        <activity
            android:name=".Activity.ViewImageActivity"
            android:theme="@style/WelcomeActivity" />
        <activity
            android:name=".Activity.PostActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".Activity.NewPostActivity"
            android:label="@string/new_post" />
        <activity
            android:name=".Activity.ProfileActivity"
            android:label="@string/profile" />
        <activity
            android:name=".Activity.HomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>